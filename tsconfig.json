{
  "compilerOptions": {
    "target": "ES2017",                   
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,                       // ✅ Allow .js / .jsx files
    "checkJs": false,                      // ✅ Do NOT type-check JS
    "skipLibCheck": true,                  
    "strict": true,                        // Only applies to TS files
    "noEmit": true,                        
    "esModuleInterop": true,               
    "module": "esnext",                    
    "moduleResolution": "bundler",         
    "resolveJsonModule": true,             
    "isolatedModules": true,               
    "jsx": "preserve",                     
    "incremental": true,                   
    "plugins": [{"name": "next"}],         
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}